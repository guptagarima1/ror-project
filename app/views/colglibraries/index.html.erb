<h1>Libraries</h1>
<%= link_to 'New colglibrary', new_colglibrary_path %>
<table>
  <tr>
    <th>Name</th>
    <th>opening_time</th>
    <th>closing_time</th>
    <th colspan="3"></th>
  </tr>
 
  <% @colglibraries.each do |colglibrary| %>
    <tr>
      <td><%= colglibrary.name %></td>
      <td><%= colglibrary.opening_time %></td>
      <td><%= colglibrary.closing_time %></td>
      <td><%= link_to 'Show', colglibrary_path(colglibrary) %></td>
      <td><%= link_to 'Edit', edit_colglibrary_path(colglibrary) %></td>
      <td><%= link_to 'Destroy', colglibrary_path(colglibrary),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>